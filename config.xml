<?xml version='1.0' encoding='utf-8'?>
<widget id="com.alberione.alpi" version="0.0.1" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Alpi</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<preference name="permissions" value="none"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<gap:plugin name="br.com.paveisitemas.splashscreen" version="2.1.1" />
	<gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />	
	
	<platform name="browser">
		<preference name="SplashScreen" value="xhdpi.jpg" /> <!-- defaults to "img/logo.png" -->
		<preference name="SplashScreenDelay" value="3000" /> <!-- defaults to "3000" -->
		<preference name="SplashScreenBackgroundColor" value="white" /> <!-- defaults to "#464646" -->
		<preference name="ShowSplashScreen" value="true" /> <!-- defaults to "true" -->
		<preference name="SplashScreenWidth" value="600" /> <!-- defaults to "170" -->
		<preference name="SplashScreenHeight" value="300" /> <!-- defaults to "200" -->
	</platform>
	
	<icon src="icon.png" />
</widget>
