<?xml version='1.1' encoding='utf-8'?>
<widget id="com.alberione.alpi.accesible" version="0.0.2" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ALPI Accesible</name>
    <description>
        ALPI Accesible colabora con las personas con discapacidad y su entorno a través de la localización y calificación de los lugares accesibles en Argentina.
    </description>
    <author email="contacto@alberione.com.ar" href="http://cordova.io">
        Alberione Ingeniería en Sistemas
    </author>
	<gap:config-file platform="ios" parent="UIStatusBarHidden">
		<param name="ios-package" value="CDVStatusBar" onload="true" />	
    <content src="index.html" />
		<true/>
	</gap:config-file>

	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
		<false/>
	</gap:config-file>	
   <feature name="StatusBar">
   </feature>	
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<preference name="permissions" value="none"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
	<gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />	
	<preference name="KeyboardShrinksView" value="true" />
	<preference name="show-splash-screen-spinner" value="false" />  
	<feature name="Geolocation">
		<param name="ios-package" value="CDVLocation" />
	</feature>	
	
	<!-- ESTADO DE CONEXION -->
	<gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
	<!-- Android -->
	<feature name="NetworkStatus">
    	<param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
	</feature>
	<!-- iOs -->
	<feature name="NetworkStatus">
    	<param name="ios-package" value="CDVConnection" />
	</feature>
	
	<!-- CONFIGURACION DE LOS ICONOS Y SPLASHSCREEN (FALSOS) -->
	
	<icon src="/iconos/icon.png" />
		
	
</widget>
