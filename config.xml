<?xml version='1.0' encoding='utf-8'?>
<widget id="com.alberione.alpi.accesible" version="0.0.2" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ALPI Accesible</name>
    <description>
        ALPI Accesible colabora con las personas con discapacidad y su entorno a través de la localización y calificación de los lugares accesibles en Argentina.
    </description>
    <author email="contacto@alberione.com.ar" href="http://cordova.io">
        Alberione Ingeniería en Sistemas
    </author>
	<gap:config-file platform="ios" parent="UIStatusBarHidden">
		<true/>
	</gap:config-file>

	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
		<false/>
	</gap:config-file>	
   <feature name="StatusBar">
		<param name="ios-package" value="CDVStatusBar" onload="true" />
	</feature>			
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<preference name="permissions" value="none"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
	<gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />	
	<preference name="KeyboardShrinksView" value="true" />
	<preference name="show-splash-screen-spinner" value="false" />  
	<feature name="Geolocation">
		<param name="ios-package" value="CDVLocation" />
	</feature>	
	<icon src="icon.png" />
	<!-- iPhone and iPod touch -->
	<gap:splash src="/img/splash.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="/img/splash.png" gap:platform="ios" width="640" height="960" />
	
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="/img/splash.png" gap:platform="ios" width="640" height="1136" />
	
	<!-- iPhone 6 -->
	<gap:splash src="/img/splash.png" gap:platform="ios" width="750" height="1334" />
	<gap:splash src="/img/splash.png" gap:platform="ios" width="1242" height="2208" />
	<gap:splash src="/img/splash.png" gap:platform="ios" width="2208" height="1242" />
	
	<!-- iPad -->
	<gap:splash src="/img/splash.png" gap:platform="ios" width="768" height="1024" />
	<gap:splash src="/img/splash.png" gap:platform="ios" width="1024" height="768" />
	
	<!-- Retina iPad -->
	<gap:splash src="/img/splash.png" gap:platform="ios" width="1536" height="2048" />
	<gap:splash src="/img/splash.png" gap:platform="ios" width="2048" height="1536" />	
	
	<!-- iPhone 6 / 6+ -->
	<icon src="icon-180.png" gap:platform="ios" width="180" height="180" />

	<!-- iPhone / iPod Touch  -->
	<icon src="icon-60.png" gap:platform="ios" width="60" height="60" />
	<icon src="icon-120.png" gap:platform="ios" width="120" height="120" />

	<!-- iPad -->
	<icon src="icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="icon-152.png" gap:platform="ios" width="152" height="152" />

	<!-- Settings Icon -->
	<icon src="icon-29.png" gap:platform="ios" width="29" height="29" />
	<icon src="icon-58.png" gap:platform="ios" width="58" height="58" />

	<!-- Spotlight Icon -->
	<icon src="icon-40.png" gap:platform="ios" width="40" height="40" />
	<icon src="icon-80.png" gap:platform="ios" width="80" height="80" />	
	
	<!-- iPhone / iPod Touch -->
	<icon src="icon-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="icon-114.png" gap:platform="ios" width="114" height="114" />

	<!-- iPad -->
	<icon src="icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="icon-144.png" gap:platform="ios" width="144" height="144" />

	<!-- iPhone Spotlight and Settings Icon -->
	<icon src="icon-29.png" gap:platform="ios" width="29" height="29" />
	<icon src="icon-58.png" gap:platform="ios" width="58" height="58" />

	<!-- iPad Spotlight and Settings Icon -->
	<icon src="icon-50.png" gap:platform="ios" width="50" height="50" />
	<icon src="icon-100.png" gap:platform="ios" width="100" height="100" />	
</widget>
