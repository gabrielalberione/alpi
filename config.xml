<?xml version='1.0' encoding='utf-8'?>
<widget id="com.alberione.alpi" version="0.0.1" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ALPI Accesible</name>
    <description>
        ALPI Accesible colabora con las personas con discapacidad y su entorno a través de la localización y calificación de los lugares accesibles en Argentina.
    </description>
    <author email="contacto@alberione.com.ar" href="http://cordova.io">
        Alberione Ingeniería en Sistemas
    </author>
	<gap:config-file platform="ios" parent="UIStatusBarHidden">
		<true/>
	</gap:config-file>

	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
		<false/>
	</gap:config-file>	
   <feature name="StatusBar">
		<param name="ios-package" value="CDVStatusBar" onload="true" />
	</feature>			
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<preference name="permissions" value="none"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
	<gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />	
	<preference name="KeyboardShrinksView" value="true" />
	<preference name="show-splash-screen-spinner" value="false" />        
	<icon src="icon.png" />
	<!-- iPhone and iPod touch -->
	<gap:splash src="/img/splash.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="/img/splash.png" gap:platform="ios" width="640" height="960" />
	
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="/img/splash.png" gap:platform="ios" width="640" height="1136" />
	
	<!-- iPhone 6 -->
	<gap:splash src="/img/splash.png" gap:platform="ios" width="750" height="1334" />
	<gap:splash src="/img/splash.png" gap:platform="ios" width="1242" height="2208" />
	<gap:splash src="/img/splash.png" gap:platform="ios" width="2208" height="1242" />
	
	<!-- iPad -->
	<gap:splash src="/img/splash.png" gap:platform="ios" width="768" height="1024" />
	<gap:splash src="/img/splash.png" gap:platform="ios" width="1024" height="768" />
	
	<!-- Retina iPad -->
	<gap:splash src="/img/splash.png" gap:platform="ios" width="1536" height="2048" />
	<gap:splash src="/img/splash.png" gap:platform="ios" width="2048" height="1536" />	
</widget>
