<?xml version='1.0' encoding='utf-8'?>
<widget id="com.alberione.alpi.accesible" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <allow-intent href="market:*" />
    <name>ALPI Accesible</name>
    <description>
        ALPI Accesible colabora con las personas con discapacidad y su entorno a través de la localización y calificación de los lugares accesibles en Argentina.
    </description>
    <author email="contacto@alberione.com.ar" href="http://cordova.io">
        Alberione Ingeniería en Sistemas
    </author>
    <gap:config-file parent="UIStatusBarHidden" platform="ios">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
        <content src="index.html" />
        <true />
    </gap:config-file>
    <gap:config-file parent="UIViewControllerBasedStatusBarAppearance" platform="ios">
        <false />
    </gap:config-file>
    <gap:plugin name="cordova-plugin-whitelist" source="npm" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="permissions" value="none" />
    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    <gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />
    <preference name="KeyboardShrinksView" value="true" />
    <preference name="show-splash-screen-spinner" value="false" />
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
    <icon src="/iconos/icon.png" />
    <gap:splash gap:platform="ios" height="480" src="/img/splash.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="/img/splash.png" width="640" />
    <gap:splash gap:platform="ios" height="1136" src="/img/splash.png" width="640" />
    <gap:splash gap:platform="ios" height="1334" src="/img/splash.png" width="750" />
    <gap:splash gap:platform="ios" height="2208" src="/img/splash.png" width="1242" />
    <gap:splash gap:platform="ios" height="1242" src="/img/splash.png" width="2208" />
    <gap:splash gap:platform="ios" height="1024" src="/img/splash.png" width="768" />
    <gap:splash gap:platform="ios" height="768" src="/img/splash.png" width="1024" />
    <gap:splash gap:platform="ios" height="2048" src="/img/splash.png" width="1536" />
    <gap:splash gap:platform="ios" height="1536" src="/img/splash.png" width="2048" />
    <icon gap:platform="ios" height="180" src="/iconos/icon-180.png" width="180" />
    <icon gap:platform="ios" height="60" src="/iconos/icon-60.png" width="60" />
    <icon gap:platform="ios" height="120" src="/iconos/icon-120.png" width="120" />
    <icon gap:platform="ios" height="76" src="/iconos/icon-76.png" width="76" />
    <icon gap:platform="ios" height="152" src="/iconos/icon-152.png" width="152" />
